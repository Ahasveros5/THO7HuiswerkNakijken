<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	
	<init-param>
  		<param-name>huiswerknakijken.hu</param-name>
 		 <param-value>THO7HuiswerkNakijken</param-value>
	</init-param>
	
	
	
	<servlet>
		<servlet-name>LeerlingRegistratieServlet</servlet-name>
		<servlet-class>huiswerknakijken.hu.Servlets.LeerlingRegistratieServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LeerlingRegistratieServlet</servlet-name>
		<url-pattern>/LeerlingRegistratieServlet.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>LeraarRegistratieServlet</servlet-name>
		<servlet-class>huiswerknakijken.hu.Servlets.LeraarRegistratieServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LeraarRegistratieServlet</servlet-name>
		<url-pattern>/LeraarRegistratieServlet.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>huiswerknakijken.hu.Servlets.LoginServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>huiswerknakijken.hu.Servlets.LogoutServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet.do</url-pattern>
	</servlet-mapping>
	
	
</web-app>